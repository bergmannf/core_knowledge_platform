<?xml version="1.0" encoding="utf-8"?>
<comment xmlns="http://{{ url }}"
    xmlns:atom="http://www.w3.org/2005/atom">
    <title>
        {{ comment.title }}
    </title>
    <text>
        {{ comment.text }}
    </text>
    <date>
        {{ comment.date }}
    </date>
    <publication>
        <atom:link rel="publication" type="application/xml" href="http://{{ url }}/publication/{{ comment.publication.id }}"/>
    </publication>
    <user>
            <atom:link rel="user" type="application/xml" href="http://{{ url }}/user/{{ comment.user.id }}"/>
    </user>
    {% for vote in comment.vote_set %}
    <vote>
            <atom:link rel="vote" type="application/xml" href="http://{{ url }}/vote/{{ comment.vote.id }}"/>
    </vote>
    {% endfor %}
</comment>
