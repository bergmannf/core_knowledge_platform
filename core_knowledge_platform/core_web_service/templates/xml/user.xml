<?xml version="1.0" encoding="utf-8"?>
<user xmlns="http://{{ url }}"
    xmlns:atom="http://www.w3.org/2005/atom">
    <username>
        {{ user.username }}
    </username>
    <first_name>
        {{ user.first_name }}
    </first_name>
    <last_name>
        {{ user.last_name }}
    </last_name>
    <email>
        {{ user.email }}
    </email>
    <degree>
        {{ user.profile.degree }}
    </degree>
    <institution>
        {{ user.profile.institution }}
    </institution>
    <authenticated_professional>
        {{ user.profile.authenticated_professional }}
    </authenticated_professional>
    <esteem>
        <atom:link rel="esteem" type="application/xml" href="http://{{ url }}/esteem/{{ user.profile.esteem.id }}"/>
    </esteem>
    <research_areas>
        {% for area in user.profile.research_areas.all %}
        <research_area>
            <atom:link rel='research_area' type="application/xml" href="http://{{ url }}/researcharea/{{ area.id }}"/>
        </research_area>
        {% endfor %}
    </research_areas>
    <fields>    
        {% for field in user.profile.profilefield_set.all %}
        <{{ field.key }}>
            {{ field.value }}
        </{{ field.key }}>
        {% endfor %}
    </fields>
</user>
